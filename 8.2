#include <iostream>
#include <sstream>
#include <map>
#include <cctype>
#include <string>

int main() {
    std::string line;
    std::cout << "Enter a line of text: ";
    std::getline(std::cin, line);

    // Counting words
    std::istringstream iss(line);
    std::string word;
    int wordCount = 0;
    while (iss >> word) {
        wordCount++;
    }

    // Counting letter occurrences
    std::map<char, int> letterCount;
    for (char ch : line) {
        if (std::isalpha(ch)) {
            ch = std::tolower(ch);
            letterCount[ch]++;
        }
    }

    // Output results
    std::cout << wordCount << " words" << std::endl;
    for (const auto& pair : letterCount) {
        std::cout << pair.second << " " << pair.first << std::endl;
    }

    return 0;
}
