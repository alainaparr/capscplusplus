#include <iostream>
#include <string>
using namespace std;

bool isLeapYear(int year) {
    return (year % 400 == 0) || ((year % 4 == 0) && (year % 100 != 0));
}

int getCenturyValue(int year) {
    int century = year / 100;
    return (3 - (century % 4)) * 2;
}

int getYearValue(int year) {
    int lastTwoDigits = year % 100;
    int leapYearAdjustment = lastTwoDigits / 4;
    return lastTwoDigits + leapYearAdjustment;
}

int getMonthValue(int month, int year) {
    int monthValues[] = {0, 3, 3, 6, 1, 4, 6, 2, 5, 0, 3, 5};
    if (month == 1 || month == 2) {
        if (isLeapYear(year))
            return monthValues[month - 1] + 6;
        else
            return monthValues[month - 1];
    } else {
        return monthValues[month - 1];
    }
}

void getInput(int &month, int &day, int &year) {
    string monthName;
    cout << "Enter the date (e.g., July 4, 2008): ";
    cin >> monthName >> day >> year;

    string months[] = {"January", "February", "March", "April", "May", "June",
                       "July", "August", "September", "October", "November", "December"};

    for (int i = 0; i < 12; ++i) {
        if (monthName == months[i]) {
            month = i + 1;
            return;
        }
    }

    // If the input is not a month name, assume it's an integer representing the month.
    month = stoi(monthName);
}

int main() {
    int month, day, year;
    getInput(month, day, year);

    int dayOfWeek = (day + getMonthValue(month, year) + getYearValue(year) + getCenturyValue(year)) % 7;

    string daysOfWeek[] = {"Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"};
    cout << "The day of the week is: " << daysOfWeek[dayOfWeek] << endl;

    return 0;
}
