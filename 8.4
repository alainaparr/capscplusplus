#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main() {
    string fullName;
    cout << "Enter the person's name (First Middle Last): ";
    getline(cin, fullName);

    // Using stringstream to parse the input
    stringstream ss(fullName);
    string firstName, middleName, lastName;

    // Extracting first name
    ss >> firstName;

    // Checking if there's a middle name
    if (ss >> middleName) {
        // If there's a middle name, we need to check if there's a last name
        if (ss >> lastName) {
            // Output the name with middle initial
            cout << lastName << ", " << firstName << " " << middleName[0] << "." << endl;
        } else {
            // If there's no last name, assume the middle name is actually the last name
            cout << middleName << ", " << firstName << endl;
        }
    } else {
        // If no middle name provided, assume the last word is the last name
        cout << "Invalid input. Please provide at least a first and last name." << endl;
    }

    return 0;
}


