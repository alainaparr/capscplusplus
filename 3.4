#include <iostream>
#include <cctype>

int main() {
    char card[3];  
    int numCards;
    int score = 0;
    char repeat; 

    do {
        
        score = 0;

        
        std::cout << "Enter the number of cards (2-5): ";
        std::cin >> numCards;

        
        for (int i = 0; i < numCards; ++i) {
            
            while (true) {
                std::cout << "Enter card value (2-10, T, J, Q, K, A): ";
                std::cin >> card;

                
                if (std::isdigit(card[0]) && (card[1] == '\0' || card[1] == '0')) {
                    
                    score += 10;
                    break; 
                } else {
                    switch (toupper(card[0])) {
                        case '2': case '3': case '4': case '5': case '6':
                        case '7': case '8': case '9':
                            score += (card[0] - '0');
                            break;
                        case 'T': case 'J': case 'Q': case 'K':
                            score += 10;
                            break;
                        case 'A':
                            
                            if (score + 11 <= 21) {
                                score += 11;
                            } else {
                                score += 1;
                            }
                            break;
                        default:
                            std::cout << "Invalid card, try again." << std::endl;
                            continue; 
                    }
                    break; 
                }
            }
        }

        
        std::cout << "Score: " << score << std::endl;
        if (score > 21) {
            std::cout << "Busted!" << std::endl;
        }

        
        std::cout << "Do you want to enter another hand? (y/n): ";
        std::cin >> repeat;

    } while (toupper(repeat) == 'Y');

    std::cout << "Goodbye!" << std::endl;

    return 0;
}




