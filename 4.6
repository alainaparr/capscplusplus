#include <iostream>
#include <iomanip>
#include <string>

void displayWelcome() {
    
    std::cout << "Each deep-fried Twinkie costs $3.50." << std::endl;
}

double insertCoin(double totalAmount) {
    std::string coinType;

    do {
        std::cout << "Insert a coin (dollar, quarter, dime, nickel): ";
        std::cin >> coinType;

        if (coinType == "dollar" || coinType == "quarter" || coinType == "dime" || coinType == "nickel") {
            double coinValue = 0.0;

            if (coinType == "dollar") {
                coinValue = 1.00;
            } else if (coinType == "quarter") {
                coinValue = 0.25;
            } else if (coinType == "dime") {
                coinValue = 0.10;
            } else if (coinType == "nickel") {
                coinValue = 0.05;
            }

            totalAmount += coinValue;
            std::cout << "Total amount: $" << std::fixed << std::setprecision(2) << totalAmount << std::endl;
        } else {
            std::cout << "Invalid coin. Please insert a valid coin." << std::endl;
        }

    } while (totalAmount < 3.50);

    return totalAmount;
}

void dispenseTwinkie(double totalAmount) {
    double change = totalAmount - 3.50;

    std::cout << "Enjoy your deep-fried Twinkie!" << std::endl;

    if (change > 0) {
        std::cout << "Change: $" << std::fixed << std::setprecision(2) << change << std::endl;
    }
}

int main() {
    double totalAmount = 0.0;

    displayWelcome();

    totalAmount = insertCoin(totalAmount);

    dispenseTwinkie(totalAmount);

    return 0;
}
