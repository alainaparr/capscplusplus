#include <iostream>
#include <cstring>

void bubbleSort(int array[], char letters[], int length) {
    for (int i = 0; i < length - 1; ++i) {
        for (int j = 0; j < length - i - 1; ++j) {
            if (array[j] < array[j + 1]) {
                std::swap(array[j], array[j + 1]);
                std::swap(letters[j], letters[j + 1]);
            }
        }
    }
}

int main() {
    const int MAX_SIZE = 26; // Assuming only lowercase letters
    int occurrences[MAX_SIZE] = {0};
    char letters[MAX_SIZE] = {'\0'};

    std::string input;
    std::cout << "Enter a line of text (lowercase letters only): ";
    std::getline(std::cin, input);

    for (char c : input) {
        if (c >= 'a' && c <= 'z') {
            ++occurrences[c - 'a'];
        }
    }

    // Fill the letters array with lowercase letters
    for (int i = 0; i < MAX_SIZE; ++i) {
        letters[i] = 'a' + i;
    }

    // Sort the arrays based on occurrences
    bubbleSort(occurrences, letters, MAX_SIZE);

    // Output the result
    std::cout << "letter" << std::endl;
    for (int i = 0; i < MAX_SIZE; ++i) {
        if (occurrences[i] != 0) {
            std::cout << letters[i] << std::endl;
        }
    }

    std::cout << "Number of Occurrences" << std::endl;
    for (int i = 0; i < MAX_SIZE; ++i) {
        if (occurrences[i] != 0) {
            std::cout << occurrences[i] << std::endl;
        }
    }

    return 0;
}
